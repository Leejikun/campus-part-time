<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_alignParentTop="true"
        style="@style/TopbarStyle" >
        <ImageView
            android:id="@+id/back"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/back"/>
        <TextView
            android:id="@+id/name"
            android:text="发布兼职"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text_size" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/text3"
        android:gravity="center"
        android:textSize="12dp" />
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#ccc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="15dp"
        android:textColor="#ff0000"
        android:id="@+id/tv"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">
    <TextView
        android:id="@+id/id_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/worktime"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_centerVertical="true"/>
    <EditText
        android:id="@+id/id_publish_worktime"
        android:layout_toEndOf="@+id/id_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入工作时间"
        android:backgroundTint="@null"
        android:background="@null"
        android:textSize="15sp"
        android:layout_centerInParent="true"/>
    </RelativeLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#ccc"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/id_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/workspace"
            android:padding="10dp"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/id_publish_workspace"
            android:layout_toEndOf="@+id/id_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入工作地点"
            android:backgroundTint="@null"
            android:background="@null"
            android:textSize="15sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/id_endtime"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/endtime"
            android:padding="10dp"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/id_publish_endtime"
            android:layout_toEndOf="@+id/id_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入截止时间"
            android:backgroundTint="@null"
            android:background="@null"
            android:textSize="15sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/id_peoplenumber"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/peoplenumber"
            android:padding="10dp"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/id_publish_peoplenumber"
            android:layout_toEndOf="@+id/id_peoplenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入要求人数"
            android:backgroundTint="@null"
            android:background="@null"
            android:textSize="15sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:text="@string/性别要求"
            android:padding="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_sex"
            android:textSize="15sp"
            android:gravity="center_vertical"/>
        <RadioGroup
            android:layout_toRightOf="@id/id_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
        <RadioButton
            android:text="@string/男"
            android:layout_toEndOf="@+id/id_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_radio1"
            android:focusable="false"
            android:layout_centerInParent="true"/>

        <RadioButton
            android:text="@string/女"
            android:layout_toEndOf="@+id/id_radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_radio2"
            android:focusable="false"
            android:layout_centerInParent="true"/>

        <RadioButton
            android:text="@string/男女不限"
            android:layout_toEndOf="@+id/id_radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_radio"
            android:focusable="false"
            android:layout_centerInParent="true"/>
        </RadioGroup>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/id_money"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/工薪"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"/>
        <RadioGroup
            android:id="@+id/id_moneytype"
            android:layout_toRightOf="@id/id_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
        <RadioButton
            android:text="@string/日结"
            android:layout_toEndOf="@+id/id_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_radio3"
            android:focusable="false"
            android:layout_centerInParent="true"/>

        <RadioButton
            android:text="@string/月结"
            android:layout_toEndOf="@+id/id_radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_radio4"
            android:focusable="false"
            android:layout_centerInParent="true"/>
        </RadioGroup>
        <EditText
            android:paddingLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/id_moneytype"
            android:hint="金额"
            android:textSize="15dp"
            android:id="@+id/money"
            android:background="@null"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="元"
            android:layout_toEndOf="@+id/money"
            android:gravity="center_vertical"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:text="@string/身份"
            android:padding="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_card"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <RadioGroup
            android:layout_toRightOf="@id/id_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
        <RadioButton
            android:text="@string/学生"
            android:layout_toEndOf="@+id/id_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_radio5"
            android:focusable="false"
            android:layout_centerInParent="true"/>

        <RadioButton
            android:text="@string/非学生"
            android:layout_toEndOf="@+id/id_radio5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_radio6"
            android:focusable="false"
            android:layout_centerInParent="true"/>
        </RadioGroup>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/id_number"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/联系方式"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/id_publish_number"
            android:layout_toEndOf="@+id/id_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/请输入手机号码"
            android:textSize="15sp"
            android:backgroundTint="@null"
            android:background="@null"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_miaoshu"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/工作描述"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/id_public_miaoshu"
            android:layout_toEndOf="@+id/id_miaoshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入工作描述"
            android:textSize="15sp"
            android:backgroundTint="@null"
            android:background="@null"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:id="@+id/view" />

            <Button
        android:text="@string/完成并发布"
        android:textColor="#FFFFFF"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/id_btn"
        android:background="@drawable/green"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />
            </LinearLayout>
    </ScrollView>
</LinearLayout>

