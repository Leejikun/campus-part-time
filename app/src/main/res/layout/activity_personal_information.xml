<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/bc">

    <RelativeLayout
        android:layout_alignParentTop="true"
        style="@style/TopbarStyle">
        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/back"
            android:id="@+id/back"/>
        <TextView
            android:text="个人信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.example.administrator.practicaltraining.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/touxiang1"
                    android:padding="10dp"
                    android:id="@+id/touxiang"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拍照/从相册中选择"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/bg_topbar"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#ccc"/>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="46dp">
                <TextView
                    android:id="@+id/id_name"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="昵称："
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="17sp"/>
                <EditText
                    android:id="@+id/truename"
                    android:layout_width="wrap_content"
                    android:textCursorDrawable="@null"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColorHint="#999"
                    android:background="@null"
                    android:textSize="17sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="46dp">
                <TextView
                    android:id="@+id/id_year"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="年龄："
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="17sp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:textCursorDrawable="@null"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColorHint="#999"
                    android:background="@null"
                    android:textSize="17sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="46dp">

                <TextView
                    android:id="@+id/id_sex"
                    android:text="性别:"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:textSize="17sp"/>
                <EditText

                    android:layout_toEndOf="@+id/id_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColorHint="#999"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="17sp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="46dp">
                <TextView
                    android:id="@+id/id_zhanghao"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="帐号："
                    android:textColor="#000000"
                    android:textSize="17sp"/>
                <EditText
                    android:id="@+id/year"
                    android:layout_toEndOf="@+id/id_zhanghao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColorHint="#999"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="46dp">
                <TextView
                    android:id="@+id/id_number"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="QQ："
                    android:textColor="#000000"
                    android:textSize="17dp"/>
                <EditText
                    android:id="@+id/mymoblenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:background="@null"
                    android:textColorHint="#999"
                    android:textCursorDrawable="@null"
                    android:textColor="#808080"
                    android:textSize="17sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="46dp">
                <TextView
                    android:text="职业："
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:id="@+id/id_card"
                    android:textSize="17dp"/>
                <EditText
                    android:layout_toEndOf="@+id/id_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColorHint="#999"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="46dp">
                <TextView
                    android:id="@+id/id_locality"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="所在地："
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="17sp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:textCursorDrawable="@null"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColorHint="#999"
                    android:background="@null"
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="46dp">
                <TextView
                    android:text="就职单位："
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:id="@+id/id_company"
                    android:textSize="17dp"/>
                <EditText
                    android:layout_toEndOf="@+id/id_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColorHint="#999"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="46dp">
                <TextView
                    android:id="@+id/id_hobby"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="兴趣爱好："
                    android:textColor="#000000"
                    android:textSize="17dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:background="@null"
                    android:textColorHint="#999"
                    android:textCursorDrawable="@null"
                    android:textColor="#808080"
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"></LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="保存"
                android:background="@color/green"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"></LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>