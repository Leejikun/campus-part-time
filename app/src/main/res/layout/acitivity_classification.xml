<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_layout_bg">
    <RelativeLayout
        android:id="@+id/layout_category_topbar"
        style="@style/TopbarStyle" >
        <TextView
            android:id="@+id/tv_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="分类"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text_size"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="10dp">
            <RelativeLayout
                android:id="@+id/id_classification_hometeacher"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_middle"
                android:layout_marginTop="@dimen/item_margin_top"
                android:background="@drawable/bg_item"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/sort_img1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/b1"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家教类"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/sort_img1"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/personel_arrow_right" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                style="@style/PersonalLine"
                android:layout_below="@+id/id_myself_myshop"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/mysort"/>
            <RelativeLayout
                android:id="@+id/id_classification_service"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_middle"
                android:background="@drawable/bg_item"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/sort_img2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/b2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginRight="15.0dip" />
                <TextView
                    android:id="@+id/server"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务类"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/sort_img2"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/personel_arrow_right" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/mysort"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                style="@style/PersonalLine"
                android:layout_below="@+id/id_myself_myshop"/>
            <RelativeLayout
                android:id="@+id/id_classification_life"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_middle"
                android:layout_marginTop="@dimen/item_margin_top"
                android:background="@drawable/bg_item"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/sort_img3"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/b3"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginRight="15.0dip" />
                <TextView
                    android:id="@+id/life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生活类"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/sort_img3"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/personel_arrow_right" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@+id/mysort"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                style="@style/PersonalLine"
                android:layout_below="@+id/id_myself_myshop"/>
            <RelativeLayout
                android:id="@+id/id_classification_propaganda"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_middle"
                android:background="@drawable/bg_item"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/sort_img4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/b4"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginRight="15.0dip" />
                <TextView
                    android:id="@+id/xuanch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宣传类"
                    android:layout_marginTop="0dp"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/sort_img4"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/personel_arrow_right" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/mysort"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                style="@style/PersonalLine"
                android:layout_below="@+id/id_myself_myshop"/>
            <RelativeLayout
                android:id="@+id/id_classification_longtame"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_middle"
                android:layout_marginTop="@dimen/item_margin_top"
                android:background="@drawable/bg_item"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/sort_img5"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/b5"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginRight="15.0dip"/>
                <TextView
                    android:id="@+id/longparttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="长期兼职"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/sort_img5"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/personel_arrow_right" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                style="@style/PersonalLine"
                android:layout_below="@+id/id_myself_myshop"/>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
