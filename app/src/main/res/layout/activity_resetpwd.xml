<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bigback">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/title" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:id="@+id/table"
        android:layout_below="@+id/img"
        android:layout_alignParentStart="true">
        <TableRow>
            <TextView
                android:text="用户名："
                android:textSize="15dp"/>
            <EditText android:hint="请输入用户名"
                android:textSize="15dp"
                android:layout_weight="1"
                android:id="@+id/resetpwd_edit_name"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="手机号："
                android:textSize="15dp"/>
            <EditText android:hint="请输入手机号"
                android:textSize="15dp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="密码："
                android:textSize="15dp"/>
            <EditText android:hint="请输入密码"
                android:id="@+id/resetpwd_edit_pwd_old"
                android:textSize="15dp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="确认密码："
                android:textSize="15dp"/>
            <EditText android:hint="请再输入密码"
                android:id="@+id/resetpwd_edit_pwd_new"
                android:textSize="15dp"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/table"
        android:id="@+id/register_btn_sure"
        android:layout_marginTop="100dp"
        android:text="确定"
        android:background="@drawable/button"
        android:textSize="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="取消"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:textSize="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/register_btn_cancel"
        android:layout_below="@+id/register_btn_sure" />
</RelativeLayout>