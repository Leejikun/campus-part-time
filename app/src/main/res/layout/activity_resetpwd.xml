<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feedbackbackground">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textSize="17dp"
        android:gravity="center"
        android:layout_marginTop="13dp"
        android:id="@+id/title"
        android:textColor="#333333"
        android:layout_marginBottom="13dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/table"
        android:id="@+id/resetpwd_btn_sure"
        android:layout_marginTop="35dp"
        android:text="确定"
        android:background="@drawable/button"
        android:textSize="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:text="取消"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:textSize="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/resetpwd_btn_cancel"
        android:layout_below="@+id/resetpwd_btn_sure" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="70dp"
        android:id="@+id/table"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true">
        <TableRow android:layout_marginLeft="5dp">
            <TextView
                android:text="用户名"
                android:textSize="17dp"
                android:textColor="#222222"/>
            <EditText android:hint="请输入用户名"
                android:textSize="17dp"
                android:layout_weight="1"
                android:id="@+id/resetpwd_edit_name"
                android:background="@null"
                android:layout_marginLeft="10dp" />
        </TableRow>
        <TableRow android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:text="旧密码"
                android:textSize="17dp"
                android:textColor="#222222"/>
            <EditText android:hint="请输入旧密码"
                android:id="@+id/resetpwd_edit_pwd_old"
                android:textSize="17dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginLeft="10dp" />
        </TableRow>
        <TableRow android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:text="请输入你的新密码"
                android:textSize="17dp"
                android:textColor="#222222"/>
            <EditText android:hint="请输入密码"
                android:id="@+id/resetpwd_edit_pwd_new"
                android:textSize="17dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginLeft="10dp" />
        </TableRow>
        <TableRow android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:text="确认密码"
                android:textSize="17dp"
                android:textColor="#222222"/>
            <EditText android:hint="请再输入密码"
                android:id="@+id/resetpwd_edit_pwd_check"
                android:textSize="17dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginLeft="10dp" />
        </TableRow>
    </TableLayout>
</RelativeLayout>